<!doctype html>
<html>
<head>
  <meta charset="utf-8"> 
  <meta name="viewport" content="width=device-width,height=device-height,initial-scale=1,user-scalable=0">
  <style type="text/css">
  *,body
  {
    margin-bottom: 0px;
    padding-right: 0px;
  }
  .color_container
  {
     display: inline-flex;
     flex-direction:row;
     border: 1px solid #CCC;
  }
	.color_son_container
  {   
    display: flex;
    flex-direction:column ;
    height: 400px;
    width:100px;
  }
  .color_son{
   /* display: block;
    width: 100px;
    height: 50px;*/
    text-align: center;
    list-style-type:none;
    flex-grow: 1;
    
  }
  .color_father_container
  {   
    display: flex;
    flex-direction:column ;
    justify-content:space-around;
    height: 400px;
    width:30px;
    border-right: 1px solid #CCC;
    margin:0 20px;
  }
  .color_father
  {
    width: 20px;
    height:20px;
     border-radius: 4px;
  }
  .color_toolbar
  {
    height: 50px;
    width: 100%;
  }
  .color_windown
  {
      display: inline-flex;
      flex-direction:column ;
      padding:10px;
      border: 2px solid #CCC;
      border-radius: 4px;
      background: white; 
  }
  
  </style>
</head>
<body >
  <div class="color_windown">
    	<div class="color_toolbar">
        abc
      </div>
      <div class="color_container">
        <div class="color_father_container"> 
            <span class="color_father" style="background:red"></span>
            <span class="color_father" style="background:pink"></span>
            <span class="color_father" style="background:purple"></span>
            <span class="color_father" style="background:deep-purple"></span>
            <span class="color_father" style="background:indigo"></span>
        </div>
        <div class="color_son_container"> 
            <span class="color_son" style="background:#FFEBEE">#FFEBEE</span>
            <span class="color_son" style="background:#FFCDD2">#FFCDD2</span>
            <span class="color_son" style="background:#EF9A9A">#EF9A9A</span>
            <span class="color_son" style="background:#E57373">#E57373</span>
            <span class="color_son" style="background:#EF5350">#EF5350</span>
      </div>
  </div>
</div>
</body>
</html>
